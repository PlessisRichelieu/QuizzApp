<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background2screen"
    android:orientation="vertical"
    tools:context=".HardMode">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/hardAnswer2"
            android:layout_width="179dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/hardAnswer3"
            android:background="#ff0000"
            android:text="Jimmy Carter"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hardAnswer1"
            android:layout_width="177dp"
            android:layout_height="34dp"
            android:layout_alignBottom="@+id/hardAnswer2"
            android:layout_alignParentStart="true"
            android:background="#00cc00"
            android:text="Lyndon Johnson"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hardAnswer3"
            android:layout_width="176dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="53dp"
            android:background="#ff0000"
            android:text="Richard Nixon"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/hardAnswer4"
            android:layout_width="177dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:background="#00cc00"
            android:text="Gerald Ford"
            android:textAllCaps="true"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/hardQuestion"
            android:layout_width="217dp"
            android:layout_height="113dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:text="Which of these U.S. Presidents appeared on the television series Laugh-In?"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:background="#3366ff"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>